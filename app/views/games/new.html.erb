<h1>New Game</h1>
<div class="letters">
<% @letters.each do |letter| %>
<p><%= letter %></p>
<% end %>
</div>
<form action="score">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :lettersArray, @letters %>
<label for="word">What is the longest word you can find?</label> <br>
<div>
<input type="text" name="word" class="input-field">
<input type="submit" value="Answer" class="btn">
</div>
</form>
