<h1>New Game</h1>
<div class="letters">
<% @letters.each do |letter| %>
<p><%= letter %></p>
<% end %>
</div>
<form action="score">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<input name="lettersArray" type="hidden" value=<%@letters%> />
<label for="word">What is the longest word you can find?</label>
<input type="text" name="word">
<input type="submit" value="Answer">
</form>
